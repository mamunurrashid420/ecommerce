            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/support-messages/{{message_id}}/read",
              "host": ["{{base_url}}"],
              "path": ["api", "support-messages", "{{message_id}}", "read"]
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Changed my mind about the purchase\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/123/cancel",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "123", "cancel"]
            }
          }
